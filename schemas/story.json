{
    "type": "object",
    "title": "Story schema",
    "$schema": "http://json-schema.org/draft-03/schema",
    "required": true,
    "properties": {
        "id": {
            "required": true,
            "type": "id_field",
            "args": {
                "primary_key": true
            }
        },
        "timestamp": {
            "required": false,
            "type": "datetime"
        },
        "creation_date": {
            "required": false,
            "type": "datetime"
        },
        "start_date": {
            "required": false,
            "type": "datetime"
        },
        "due_date": {
            "required": false,
            "type": "datetime"
        },
        "name": {
            "required": true,
            "type": "string"
        },
        "description": {
            "required": true,
            "type": "string"
        },
        "progress": {
            "required": true,
            "type": "float",
            "args": {
                "default": 0
            }
        },
        "completed": {
            "required": true,
            "type": "boolean"
        },
        "user_id": {
            "required": false,
            "type": "foreign_key",
            "args": {
                "ref_document": "User",
                "ref_column": "user.id",
                "ref_column_type": "id_field"
            }
        }
    }
}
