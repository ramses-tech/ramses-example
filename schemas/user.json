{
    "type": "object",
    "title": "User schema",
    "$schema": "http://json-schema.org/draft-03/schema",
    "required": true,
    "properties": {
        "id": {
            "required": false,
            "type": "id_field"
        },
        "profile": {
            "required": false,
            "type": "relationship",
            "args": {
                "document": "Profile",
                "backref_name": "user",
                "uselist": false
            }
        },
        "stories": {
            "required": false,
            "type": "relationship",
            "args": {
                "document": "Story",
                "ondelete": "NULLIFY",
                "backref_name": "owner",
                "backref_ondelete": "NULLIFY"
            }
        },
        "timestamp": {
            "required": false,
            "type": "datetime"
        },
        "username": {
            "required": true,
            "type": "string",
            "args": {
                "min_length": 1,
                "max_length": 50,
                "unique": true,
                "primary_key": true
            }
        },
        "email": {
            "required": true,
            "type": "string",
            "args": {
                "unique": true
            }
        },
        "password": {
            "required": true,
            "type": "string",
            "args": {
                "min_length": 3
            }
        },
        "first_name": {
            "required": false,
            "type": "string",
            "args": {
                "max_length": 50,
                "default": ""
            }
        },
        "last_name": {
            "required": false,
            "type": "string",
            "args": {
                "max_length": 50,
                "default": ""
            }
        },
        "last_login": {
            "required": false,
            "type": "datetime"
        },
        "groups": {
            "required": false,
            "type": "list",
            "args": {
                "choices": ["admin", "user"],
                "default": ["user"],
                "item_type": "string"
            }
        },
        "status": {
            "required": false,
            "type": "choice",
            "args": {
                "choices": ["active", "inactive", "blocked"],
                "default": "active"
            }
        },
        "settings": {
            "required": false,
            "type": "dict"
        }
    }
}